<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8" />
    <title>
        {% block title %}Welcome on LoremWine{% endblock %}
    </title>
    {% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="{{asset('styles/navbar.css')}}">
    <link rel="stylesheet" href="{{asset('styles/app.css')}}">
    {% endblock %}
    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('navbar') }}
    {{ encore_entry_script_tags('product-card')}}
    {{ encore_entry_script_tags('home') }}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{asset('build/images/favicon.ico')}}" />
</head>

<body class="bg-white">
    {% include "layout/navbar.html.twig" %}
    <section id="home-container" class="container-fluid">
        <div id="homeMenu-section">
            <div id="homeMenu">
                <!-- include 'partials/sidebar.html.twig' with {form: form, min: min, max: max, search: searchData} only -->
            </div>
        </div>
        <div id="homeProducts-section" class="d-column-x-centered">
            <button id="home-filterButton" class="mb-3 full-w">Filtrer</button>
            {% if app.flashes('failure')%}
            {% for message in app.flashes('failure')%}
            {% include "partials/modal.html.twig" %}
            {% endfor %}
            {% endif %}
            {% block body %}
            {% endblock %}
        </div>
    </section>
</body>
</html>